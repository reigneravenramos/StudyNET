<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="409dp"
    android:layout_height="729dp"
    android:background="#FFFFF0"
    android:fillViewport="true"
    tools:layout_editor_absoluteX="2dp"
    tools:layout_editor_absoluteY="-1dp">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".Modules1"
        tools:layout_editor_absoluteX="2dp"
        tools:layout_editor_absoluteY="-1dp">

        <TextView
            android:id="@+id/textView1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="124dp"
            android:layout_marginTop="16dp"
            android:text="DEFINING A NETWORK"
            android:textAlignment="center"
            android:textColor="#000000"
            android:textSize="16sp"
            android:textStyle="bold"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            tools:ignore="MissingConstraints" />

        <TextView
            android:id="@+id/textView2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:layout_marginTop="60dp"
            android:text="Computer Network"
            android:textColor="#000000"
            android:textSize="16sp"
            android:textStyle="bold"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            tools:ignore="MissingConstraints" />

        <TextView
            android:id="@+id/textView3"
            android:layout_width="367dp"
            android:layout_height="95dp"
            android:layout_marginStart="12dp"
            android:layout_marginTop="12dp"
            android:text="          It refers to different interconnected computing device that can exchange data and share resources with each other. These networked devices use a systems of rules, called communication protocols, to transmit information over physical or wireless technologies. "
            android:textAlignment="viewStart"
            android:textColor="#000000"
            android:textSize="14sp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/textView2" />

        <TextView
            android:id="@+id/textView4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:layout_marginBottom="214dp"
            android:text="Benefits of Computer Networking"
            android:textColor="#000000"
            android:textSize="16sp"
            android:textStyle="bold"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/textView3"
            app:layout_constraintVertical_bias="0.0" />

        <TextView
            android:id="@+id/textView5"
            android:layout_width="367dp"
            android:layout_height="80dp"
            android:layout_marginStart="12dp"
            android:layout_marginTop="12dp"
            android:text="          It allows staff to share information effortlessly, increasing productivity and efficiency, it also includes cost-effectiveness, storage efficiency, flexibility and data security.  "
            android:textAlignment="viewStart"
            android:textColor="#000000"
            android:textSize="14sp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/textView4" />

        <TextView
            android:id="@+id/textView6"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="12dp"
            android:layout_marginBottom="214dp"
            android:text="Kinds of Computer Network"
            android:textColor="#000000"
            android:textSize="16sp"
            android:textStyle="bold"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/textView5"
            app:layout_constraintVertical_bias="0.0" />

        <TextView
            android:id="@+id/textView7"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:layout_marginBottom="214dp"
            android:text="1.	Sharing Files"
            android:textColor="#000000"
            android:textSize="16sp"
            android:textStyle="bold"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/textView6"
            app:layout_constraintVertical_bias="0.013" />

        <TextView
            android:id="@+id/textView8"
            android:layout_width="367dp"
            android:layout_height="180dp"
            android:layout_marginStart="32dp"
            android:layout_marginTop="8dp"
            android:text="          •	Networks enable you to share information with other computers on the network ways. You can send a file from your computer directly to a friend’s computer by attaching the file to an email message and then mailing it, or you can let your friends access your computer over the network so that your friend can retrieve the file directly from your hard drive."
            android:textAlignment="viewStart"
            android:textColor="#000000"
            android:textSize="14sp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/textView7" />

        <ImageView
            android:id="@+id/imageView"
            android:layout_width="379dp"
            android:layout_height="250dp"
            android:layout_marginTop="488dp"
            app:layout_constraintTop_toTopOf="parent"
            app:srcCompat="@drawable/sharing_files"
            tools:layout_editor_absoluteX="22dp" />

        <TextView
            android:id="@+id/textView9"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="32dp"
            android:layout_marginTop="14dp"
            android:layout_marginBottom="214dp"
            android:text="2.	Sharing Resources"
            android:textColor="#000000"
            android:textSize="16sp"
            android:textStyle="bold"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/imageView"
            app:layout_constraintVertical_bias="0.0" />

        <TextView
            android:id="@+id/textView10"
            android:layout_width="367dp"
            android:layout_height="200dp"
            android:layout_marginStart="4dp"
            android:layout_marginTop="12dp"
            android:text="          •	You can set up certain computer resources; such as hard drives or printers, so that all computers on the network can access them. Hard Drives can be shared resources too. In fact, you must set up a hard drive as a shared resource to share files with other users, you can share other resources such as an internet connection. Example of this are sharing peripheral devices (disk, printer etc.) A file server and laser printer in a LAN are shared resources too."
            android:textAlignment="viewStart"
            android:textColor="#000000"
            android:textSize="14sp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/textView9" />

        <ImageView
            android:id="@+id/imageView2"
            android:layout_width="402dp"
            android:layout_height="206dp"
            android:layout_marginTop="936dp"
            app:layout_constraintTop_toTopOf="parent"
            app:srcCompat="@drawable/sharing_resources"
            tools:layout_editor_absoluteX="8dp" />

        <TextView
            android:id="@+id/textView11"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="12dp"
            android:layout_marginTop="14dp"
            android:layout_marginBottom="214dp"
            android:text="3.	Sharing Programs"
            android:textColor="#000000"
            android:textSize="16sp"
            android:textStyle="bold"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/imageView2"
            app:layout_constraintVertical_bias="0.02" />

        <TextView
            android:id="@+id/textView12"
            android:layout_width="367dp"
            android:layout_height="400dp"
            android:layout_marginStart="12dp"
            android:layout_marginTop="8dp"
            android:text="          •	Rather than keep separate copies of programs on each person’s computer, putting on a drive that everyone shares is sometimes the best. Example of this, if ten computer users all use a particular program, you can purchase and install ten copies of the program one for each computer. Each of the ten users can then access the program from the shared hard drive. "
            android:textAlignment="viewStart"
            android:textColor="#000000"
            android:textSize="14sp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/textView11" />

        <ImageView
            android:id="@+id/imageView3"
            android:layout_width="394dp"
            android:layout_height="235dp"
            android:layout_marginTop="1292dp"
            app:layout_constraintTop_toTopOf="parent"
            app:srcCompat="@drawable/sharing_programs"
            tools:layout_editor_absoluteX="8dp" />

    </androidx.constraintlayout.widget.ConstraintLayout>

</ScrollView>
