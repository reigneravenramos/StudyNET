<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F8F9FA"
    android:fillViewport="true">

    <!-- Use LinearLayout for clean vertical content flow -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp"
        tools:context=".Modules2">

        <!-- Header/Title Section -->
        <TextView
            android:id="@+id/textView1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:layout_marginBottom="24dp"
            android:text="INTRODUCTION TO NETWORKING PART 2"
            android:textAlignment="center"
            android:textColor="#343A40"
            android:textSize="20sp"
            android:textStyle="bold" />

        <!-- Introductory Paragraph -->
        <TextView
            android:id="@+id/textView2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="24dp"
            android:lineSpacingExtra="4dp"
            android:text="@string/networking_intro_part2"
            android:textColor="#495057"
            android:textSize="14sp" />

        <!-- Section Header: Types of Networks -->
        <TextView
            android:id="@+id/textView3"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp"
            android:text="Types of Computer Networks"
            android:textColor="#007BFF"
            android:textSize="18sp"
            android:textStyle="bold" />

        <!-- 1. LAN Card -->
        <androidx.cardview.widget.CardView
            style="@style/NetworkTypeCard"
            android:layout_marginBottom="16dp">

            <LinearLayout style="@style/NetworkTypeContent">
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="LAN (Local Area Network)"
                    style="@style/NetworkTypeTitle" />

                <TextView
                    android:id="@+id/textView4"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/network_type_lan"
                    style="@style/NetworkTypeDefinition" />

                <ImageView
                    android:id="@+id/imageView"
                    android:layout_width="match_parent"
                    android:layout_height="180dp"
                    android:layout_marginTop="8dp"
                    android:scaleType="centerInside"
                    android:contentDescription="Diagram of a Local Area Network (LAN)"
                    app:srcCompat="@drawable/lan" />
            </LinearLayout>
        </androidx.cardview.widget.CardView>

        <!-- 2. WAN Card -->
        <androidx.cardview.widget.CardView
            style="@style/NetworkTypeCard"
            android:layout_marginBottom="16dp">

            <LinearLayout style="@style/NetworkTypeContent">
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="WAN (Wide Area Network)"
                    style="@style/NetworkTypeTitle" />

                <TextView
                    android:id="@+id/textView5"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/network_type_wan"
                    style="@style/NetworkTypeDefinition" />

                <ImageView
                    android:id="@+id/imageView2"
                    android:layout_width="match_parent"
                    android:layout_height="180dp"
                    android:layout_marginTop="8dp"
                    android:scaleType="centerInside"
                    android:contentDescription="Diagram of a Wide Area Network (WAN)"
                    app:srcCompat="@drawable/wan" />
            </LinearLayout>
        </androidx.cardview.widget.CardView>

        <!-- 3. MAN Card -->
        <androidx.cardview.widget.CardView
            style="@style/NetworkTypeCard"
            android:layout_marginBottom="16dp">

            <LinearLayout style="@style/NetworkTypeContent">
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="MAN (Metropolitan Area Network)"
                    style="@style/NetworkTypeTitle" />

                <TextView
                    android:id="@+id/textView6"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/network_type_man"
                    style="@style/NetworkTypeDefinition" />

                <ImageView
                    android:id="@+id/imageView3"
                    android:layout_width="match_parent"
                    android:layout_height="180dp"
                    android:layout_marginTop="8dp"
                    android:scaleType="centerInside"
                    android:contentDescription="Diagram of a Metropolitan Area Network (MAN)"
                    app:srcCompat="@drawable/man" />
            </LinearLayout>
        </androidx.cardview.widget.CardView>

        <!-- 4. CAN Card -->
        <androidx.cardview.widget.CardView
            style="@style/NetworkTypeCard"
            android:layout_marginBottom="16dp">

            <LinearLayout style="@style/NetworkTypeContent">
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="CAN (Campus Area Network)"
                    style="@style/NetworkTypeTitle" />

                <TextView
                    android:id="@+id/textView7"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/network_type_can"
                    style="@style/NetworkTypeDefinition" />

                <ImageView
                    android:id="@+id/imageView4"
                    android:layout_width="match_parent"
                    android:layout_height="180dp"
                    android:layout_marginTop="8dp"
                    android:scaleType="centerInside"
                    android:contentDescription="Diagram of a Campus Area Network (CAN)"
                    app:srcCompat="@drawable/can" />
            </LinearLayout>
        </androidx.cardview.widget.CardView>

        <!-- 5. WLAN Card -->
        <androidx.cardview.widget.CardView
            style="@style/NetworkTypeCard"
            android:layout_marginBottom="40dp">

            <LinearLayout style="@style/NetworkTypeContent">
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="WLAN (Wireless Local Area Network)"
                    style="@style/NetworkTypeTitle" />

                <TextView
                    android:id="@+id/textView8"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/network_type_wlan"
                    style="@style/NetworkTypeDefinition" />

                <ImageView
                    android:id="@+id/imageView5"
                    android:layout_width="match_parent"
                    android:layout_height="180dp"
                    android:layout_marginTop="8dp"
                    android:scaleType="centerInside"
                    android:contentDescription="Diagram of a Wireless Local Area Network (WLAN)"
                    app:srcCompat="@drawable/wlan" />
            </LinearLayout>
        </androidx.cardview.widget.CardView>

    </LinearLayout>

</ScrollView>