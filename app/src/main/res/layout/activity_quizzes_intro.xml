<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/homescreen">

    <View
        android:id="@+id/top_bar"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:background="@color/primary_blue"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/title_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:text="StudyNet"
        android:textColor="@color/white"
        android:textSize="20sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="@id/top_bar"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@id/top_bar" />

    <TextView
        android:id="@+id/intro_card_1"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="32dp"
        android:layout_marginTop="40dp"
        android:layout_marginEnd="32dp"
        android:background="@drawable/rounded_card_bg"
        android:padding="20dp"
        android:text="Have you studied well? Now itâ€™s time to put your learning to the test! Welcome to the Quizzes, where you can challenge yourself, check how well you understand networking concepts and other technical topics, and track your progress as you improve your skills. Do your best, Iâ€™m cheering for you!"
        android:textColor="@color/text_color_main"
        android:textSize="14sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/top_bar" />

    <ImageView
        android:id="@+id/seal_image"
        android:layout_width="120dp"
        android:layout_height="120dp"
        android:layout_marginStart="-30dp"
        android:layout_marginTop="28dp"
        android:elevation="2dp"
        android:src="@drawable/seal_temp_3"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/intro_card_1" />

    <TextView
        android:id="@+id/intro_card_2"
        android:layout_width="299dp"
        android:layout_height="86dp"
        android:layout_marginTop="40dp"
        android:layout_marginEnd="32dp"
        android:background="@drawable/rounded_card_bg"
        android:padding="20dp"
        android:text="Hello again! Itâ€™s me, Sealbert, still your chonky study buddy. ðŸ¦­"
        android:textColor="@color/text_color_main"
        android:textSize="14sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/seal_image"
        app:layout_constraintTop_toBottomOf="@id/intro_card_1" />

    <Button
        android:id="@+id/btn_start_quizzes"
        android:layout_width="0dp"
        android:layout_height="55dp"
        android:layout_marginStart="60dp"
        android:layout_marginTop="40dp"
        android:layout_marginEnd="60dp"
        android:background="@drawable/btn_rounded_blue_light"
        android:text="START!"
        android:textAllCaps="true"
        android:textColor="@color/white"
        android:textSize="16sp"
        android:textStyle="bold"
        app:backgroundTint="@null"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/intro_card_2" />

</androidx.constraintlayout.widget.ConstraintLayout>