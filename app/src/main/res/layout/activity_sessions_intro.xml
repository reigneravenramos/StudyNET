<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/homescreen"
    android:padding="20dp">

    <TextView
        android:id="@+id/intro_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Welcome to the Sessions section! Here you can find all the information about the different sessions."
        android:textSize="20sp"
        android:textAlignment="center"
        android:textColor="@color/app_bar_color"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toTopOf="@+id/btn_start_sessions"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintVertical_chainStyle="packed" />

    <Button
        android:id="@+id/btn_start_sessions"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Go to Sessions"
        android:background="@drawable/rounded_button"
        app:backgroundTint="@color/button_background_tint_selector"
        android:textColor="@color/button_text_color_selector"
        android:layout_marginTop="40dp"
        app:layout_constraintTop_toBottomOf="@+id/intro_text"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>